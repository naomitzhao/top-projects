<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>new message</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <%- include('header') %>
    <main>
        <div id="formPage">
            <h2>new message</h2>
            <form method="POST" action="/new" id="newMessageForm">
                <div class="inputGroup">
                    <label for="nameInput">author name</label>
                    <input type="text" name="name" id="nameInput">
                </div>
                <div class="inputGroup">
                    <label for="messageInput">message</label>
                    <textarea name="message" id="messageInput"></textarea>
                </div>
                <div id="formButtonContainer">
                    <a class="button" id="returnHomeButton" href="/">return to home</a>
                    <button type="submit" class="button">post message</button>
                </div>
             </form>
        </div>
    </main>
     <%- include('footer') %>
</body>
<script>
    const newMessageForm = document.getElementById("newMessageForm");

    newMessageForm.addEventListener("submit", (e) => {
        if (newMessageForm.elements[0].value == "" || newMessageForm.elements[1].value == "") {
            e.preventDefault();
            alert('all fields must be filled.');
        }
    });
</script>
</html>